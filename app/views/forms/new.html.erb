
<div class="container">

  <%= form_for :form do |f| %>
  <p class="name">
    <%= f.text_field :fullname, :placeholder => "F U L L  N A M E", :class => 'response' %>
  </p>

  <p>
    <%= f.text_field :email, :placeholder => "E M A I L", :class => 'response' %>
  </p>

  <p>
    <%= f.text_field :projectrepo, :placeholder => "P R O J E C T  R E P O", :class => 'response' %>
  </p>

  <p>
    <%= f.text_field :projecturl, :placeholder => "P R O J E C T  U R L", :class => 'response' %>
  </p>

  <p>
    <%= f.submit "S U B M I T", :class => 'button' %>
  </p>
  <% end %>

</div>
